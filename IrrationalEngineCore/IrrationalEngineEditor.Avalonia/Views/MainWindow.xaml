<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:IrrationalEngineEditor.ViewModels;assembly=IrrationalEngineEditor"
        Title="IrrationalEngineEditor"
        Height="720"
        Width="400"
        Position="0,0">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  <StackPanel Orientation="Vertical">      
      <Button Content="{Binding Start}" Command="{Binding DoRunIrrationalInstance}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <TextBlock Text="{Binding SelectedItemName, Mode=OneWay}"/>
    <Slider Value="{Binding DoRotationX}" Minimum="0" Maximum="3600"></Slider>
    <Slider Value="{Binding DoRotationY}" Minimum="0" Maximum="3600"></Slider>
    <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" Items="{Binding SceneObjects}" SelectedIndex ="{Binding selectedItemIndex, Mode=TwoWay}" Width="250" Height="350" >
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</Window>